{
    "compilerOptions": {
      "moduleResolution": "Node",
      "target": "es2017",
      "lib": ["es2017"],
      "strict": true,
      "strictNullChecks": false,
      "skipLibCheck" : true,
      "preserveConstEnums" : true,
      "types": ["panorama-fgui-types"],
      "allowJs": false,
      "allowUmdGlobalAccess": true,
      "outDir": "build"
    },
    "include": [
      "ts/**/*"
    ],
    "exclude": [
      "node_modules",
      "build/*"
    ],
  }